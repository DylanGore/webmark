<a class="ui teal button floated left" href="/dashboard"><i class="icon backward"></i> Back to dashboard</a>

<h2 class="ui header">
  {{bookmarkList.title}}
</h2>
<div class="ui four column stacked grid cards">
  {{#each bookmarkList.links}}
    <div class="ui card">
      <div class="image card-image">
        <img class="ui image fluid" src="{{img_crop}}" alt="{{title}}">
      </div>
      <div class="content">
        <div class="header">
          {{title}}
        </div>
        <div class="meta">
          {{link}}
        </div>
        <div class="description">
          {{summary}}
        </div>
      </div>  
      <div class="extra content">
        <div class="two button">
          <a class="ui teal small button" href="{{link}}" target="_blank"><i class="icon globe"></i> Visit Link</a>
          <a class="ui red  small button right floated" href="/bookmarks/{{../bookmarkList.id}}/deletelink/{{id}}"><i class="icon trash"></i> Delete</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>